		<class id="Ticket" _delta="merge">
			<fields _delta="merge">
				<field id="StockElement_list"
					xsi:type="AttributeLinkedSetIndirect" _delta="define">
					<linked_class>lnkStockElementToTicket</linked_class>
					<ext_key_to_me>ticket_id</ext_key_to_me>
					<count_min>0</count_min>
					<count_max>0</count_max>
					<ext_key_to_remote>stockelement_id</ext_key_to_remote>
					<duplicates>false</duplicates>
				</field>
			</fields>
			<methods _delta="merge">
				<method id="OnUpdate" _delta="define">
					<static>false</static>
					<access>protected</access>
					<code><![CDATA[	protected function OnUpdate()
	{
        $aChanges = $this->ListChanges();
        if (array_key_exists('StockElement_list', $aChanges))
        {
        	//On recupere la liste des changements dans StockElement_list
        	$modifiedLinks=$aChanges['StockElement_list']->ListModifiedLinks();
        	foreach ($modifiedLinks as $oLnk)
            {
            	//Pour chaque element, on soustrait la quantite
               	$oLnkSE = MetaModel::GetObject('StockElement', $oLnk->Get('stockelement_id'));
            	if (is_object($oLnkSE) && (get_class($oLnkSE) == 'StockElement'))
            	{
            		//On force le recalcul des stock
        		    $oLnkSE->Set('quantity_to_compute', 'yes');
            		$iCurrentQuantity = $oLnkSE->Get('current_quantity') - $oLnk->Get('quantity');
            		if($iCurrentQuantity<0) {
            			$iCurrentQuantity=0;
            		}
            		$oLnkSE->Set('current_quantity', $iCurrentQuantity);
            		$oLnkSE->DBUpdate();
            	}
            }
        }
        parent::OnUpdate();
	}]]></code>
				</method>
